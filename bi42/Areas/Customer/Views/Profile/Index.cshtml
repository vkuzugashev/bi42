@model IEnumerable<Bi42.Models.Profile>

@{
    ViewBag.Title = "Профиль ЗАКАЗЧИКА";
}

@section featured {
    <div class="alert alert-info">
    Создайте ваши профили. Вы можете иметь несколько профилей, но помните,
    что активным может быть только один профиль.
</div>
}

<table class="table table-bordered">
    <tr>
        <th width="200px">@Html.ActionLink("Создать новый", "Create", null, new { @class="btn btn-link" })</th>
        <th class="col-md-1">
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.OrderAreaName)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.PublishTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="white-space:nowrap">
                @Html.ActionLink("Посмотреть", "Details", new { id = item.ProfileID }, new { @class = "btn btn-link" }) 
				<br/>
                @Html.ActionLink("Изменить", "Edit", new { id = item.ProfileID }, new { @class = "btn btn-link" }) 
                @*@Html.ActionLink("Удалить", "Delete", new { id = item.ProfileID }, new { @class = "btn btn-link" })*@
            </td>
            <td>
                @if (item.LogoImage != null && !"".Equals(item.LogoImage))
                {
                    <img src="@Html.DisplayFor(modelItem => item.LogoImage)" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderAreaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>
    }

</table>
