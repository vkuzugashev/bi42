<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @if (ViewBag.Description != null)
    {
    <meta name="description" content="@ViewBag.Description">
    }
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Bi42", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Подрядчик", "Index", "Home", new { area = "Employer" }, null)</li>
                    <li>@Html.ActionLink("Поиск проекта / заказа", "Index", "Project", new { area = "Employer" }, null)</li>
                    <li>@Html.ActionLink("Отобранные проекты / заказы", "ProjectWatches", "Project", new { area = "Employer" }, null)</li>
                    <li>@Html.ActionLink("Ставки", "Bids", "Project", new { area = "Employer" }, null)</li>
                    <li>@Html.ActionLink("Профиль", "Index", "Profile", new { area = "Employer" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (ViewBag.Title != null)
        {
            <h1>@ViewBag.Title</h1>
        }
        @if (ViewBag.Message != null)
        {
            <div class="message-box">@ViewBag.Message</div>
        }
        @RenderSection("featured", required: false)
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Bi42.ru, MES Lab</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
