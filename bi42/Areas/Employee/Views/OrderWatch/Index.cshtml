@model IEnumerable<Bi42.Models.OrderWatch>

@{
    ViewBag.Title = "Отобранные заказы";
}

<table width="100%" class="table table-bordered">
    <tr>
        <th width="200px"></th>
        <th>
            @Html.DisplayNameFor(model => model.OrderName)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.PublishTime)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.OrderStatusName)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.BudgetLevelName)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.Budget)
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td style="white-space:nowrap">
            @Html.ActionLink("Открыть", "Details", new { orderid = item.OrderID }, new { @class = "btn btn-link" }) |
            @Html.ActionLink("Удалить", "OrderWatchDelete", new { orderid = item.OrderID, id = item.OrderWatchID }, new { @class = "btn btn-link" })
        </td>
        <td>
            @Html.ActionLink(item.Order.ProfileName, "ProfileView", "Profile", new { id = item.Order.ProfileID, area = "Customer" }, null)
            <br/>
            @Html.DisplayFor(modelItem => item.OrderName)
            @if (item.OrderFile != null)
            {
                <br />
                @Html.ActionLink("Загрузить файл", "GetOrderFile", new { area="Customer", controller="Order", id = item.OrderID }, null)
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublishTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderStatusName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BudgetLevelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Budget)
        </td>
    </tr>
}

</table>
