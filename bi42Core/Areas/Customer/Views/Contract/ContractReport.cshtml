@model Bi42.Models.Contract
@{
    ViewBag.Title = "Отчёт о выполнении заказа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-md-12">
            <h4>Заказ №@Model.OrderID, @Model.Order.Name</h4>
            <div class="well">
                @Html.LabelFor(model => model.ContractID) @Html.DisplayFor(model => model.ContractID),
                @Html.LabelFor(model => model.BidID) @Html.DisplayFor(model => model.BidID),
                @Html.LabelFor(model => model.Bid.ProfileName) @Html.DisplayFor(model => model.Bid.ProfileName)
            </div>
            <h4>Описание заказа</h4>
            <div class="well">
                @Html.DisplayFor(model => model.Order.Description)
            </div>
            <h4>Отчёт</h4>
            <div class="well">
                @Html.DisplayFor(model => model.Report)
            </div>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-12">
            @Html.ActionLink("Назад", "Details", "Order", new { orderid=Model.OrderID }, new { @class = "btn btn-default" })
        </div>
    </div>

