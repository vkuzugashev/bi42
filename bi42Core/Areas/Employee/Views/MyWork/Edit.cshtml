@model Bi42.Models.MyWork
@{
    ViewBag.Title = "Изменить мой пример работы";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(false)
    @Html.HiddenFor(model => model.MyWorkID)

    <div class="row">
        <div class="col-md-8">
            @Html.LabelFor(model => model.ProfileID, new { @class = "control-label" })
            @Html.DropDownListFor(model => model.ProfileID, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProfileID)
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            @Html.LabelFor(model => model.Name, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            @Html.Label("MyWorkImage", new { @class = "control-label" })
        @if (Model.MyWorkImage != null)
        {
            <br>
            <img id="MyWorkImage" src="@Model.MyWorkImage" />
            <br>
            <span>Удалить картинку?</span> @Html.CheckBox("delAttach")
        }
        else
        {
            <br>
            <input type="file" name="file" class="form-control" />
        }
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            @Html.LabelFor(model => model.SiteUrl, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.SiteUrl, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SiteUrl)
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            @Html.LabelFor(model => model.Description, new { @class = "control-label" })
            @Html.TextAreaFor(model => model.Description, new { rows = "5", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <label>
                @Html.CheckBoxFor(model => model.IsActive)
                @Html.LabelFor(model => model.IsActive, new { @class = "control-label" })
            </label>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-8">
            <input type="submit" class="btn btn-primary" value="Сохранить" />
            &nbsp;&nbsp;
            @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}


